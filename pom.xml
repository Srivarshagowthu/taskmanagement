	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<phase>generate-sources</phase> <!-- Make sure this is properly configured -->
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>bash</executable>   <!-- Make sure you're using the correct shell -->
							<arguments>
								<argument>${basedir}/add-entity-annotations.sh</argument>  <!-- Path to your script -->
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>6.5.0</version>
				<executions>
					<execution>
						<id>generate-api1</id> <!-- Unique execution ID -->
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/swagger/api.yml</inputSpec>
							<generatorName>spring</generatorName>
							<apiPackage>com.sky.cloud.api</apiPackage>
							<modelPackage>com.sky.cloud.dto</modelPackage>
							<supportingFilesToGenerate>
								ApiUtil.java
							</supportingFilesToGenerate>
							<configOptions>
								<delegatePattern>true</delegatePattern>
								<useJakartaEe>true</useJakartaEe>
								<entityAnnotations>true</entityAnnotations>
								<jpaAnnotations>true</jpaAnnotations> <!-- Ensure this is included -->
							</configOptions>
						</configuration>
					</execution>

					<!-- Execution for api2.yml with a unique execution ID -->
					<execution>
						<id>generate-api2</id> <!-- Unique execution ID -->
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/swagger/api2.yml</inputSpec>
							<generatorName>spring</generatorName>
							<apiPackage>com.sky.cloud.api2</apiPackage> <!-- Different package for API2 -->
							<modelPackage>com.sky.cloud.dto2</modelPackage> <!-- Different package for models -->
							<supportingFilesToGenerate>
								ApiUtil.java
							</supportingFilesToGenerate>
							<configOptions>
								<delegatePattern>true</delegatePattern>
								<useJakartaEe>true</useJakartaEe>
								<entityAnnotations>true</entityAnnotations>
								<jpaAnnotations>true</jpaAnnotations>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

